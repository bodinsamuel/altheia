{
  "name": "altheia-async-data-validator",
  "version": "5.0.1",
  "description": "A very simple, fast and customizable async data validator",
  "keywords": [
    "validator",
    "validate",
    "validation",
    "async",
    "schema",
    "valid",
    "assert",
    "data"
  ],
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "types": "lib/",
  "scripts": {
    "lint": "eslint \"src/**\" \"test/**\"",
    "test": "jest test/",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "build": "rm -rf dist/ lib/ && yarn tsc"
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "always"
  },
  "author": "Samuel Bodin <bodin.samuel@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bodinsamuel/altheia.git"
  },
  "bugs": {
    "url": "http://github.com/bodinsamuel/altheia/issues"
  },
  "homepage": "https://github.com/bodinsamuel/altheia#readme",
  "engines": {
    "node": ">= 8"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@codechecks/client": "^0.1.10",
    "@types/jest": "24.0.24",
    "@types/lodash": "4.14.149",
    "@types/node": "13.1.1",
    "@typescript-eslint/eslint-plugin": "1.13.0",
    "@typescript-eslint/parser": "1.13.0",
    "coveralls": "^3.0.2",
    "eslint": "6.8.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-jest": "^23.1.1",
    "eslint-plugin-prettier": "3.1.0",
    "husky": "3.1.0",
    "jest": "24.9.0",
    "lint-staged": "^9.1.0",
    "prettier": "1.18.2",
    "rollup": "1.27.14",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-terser": "5.1.3",
    "rollup-plugin-typescript2": "0.25.3",
    "ts-jest": "24.0.2",
    "typecov": "0.2.1",
    "typescript": "3.7.3",
    "uglifyjs-webpack-plugin": "^2.1.3"
  },
  "jest": {
    "testEnvironment": "node",
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}

{
  "name": "altheia-async-data-validator",
  "version": "4.0.4",
  "description": "A very simple, fast and customizable async data validator",
  "keywords": [
    "validator",
    "validate",
    "validation",
    "async",
    "schema",
    "valid",
    "assert",
    "data"
  ],
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "browser": "dist/index.bundle.js",
  "types": "dist/types.d.ts",
  "scripts": {
    "lint": "eslint \"src/**\" \"test/**\"",
    "test": "jest test/",
    "coveralls": "jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "build": "rm -rf dist/ && yarn rollup -c && yarn tsc --declaration && rm dist/types.js",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint"
    ]
  },
  "prettier": {
    "tabWidth": 2,
    "singleQuote": true,
    "trailingComma": "es5",
    "arrowParens": "always"
  },
  "author": "Samuel Bodin <bodin.samuel@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bodinsamuel/altheia.git"
  },
  "bugs": {
    "url": "http://github.com/bodinsamuel/altheia/issues"
  },
  "homepage": "https://github.com/bodinsamuel/altheia#readme",
  "engines": {
    "node": ">= 8"
  },
  "pre-commit": [
    "lint"
  ],
  "dependencies": {
    "lodash": "^4.17.11"
  },
  "devDependencies": {
    "@types/jest": "24.0.15",
    "@types/lodash": "4.14.136",
    "@types/node": "12.6.2",
    "@typescript-eslint/eslint-plugin": "1.12.0",
    "@typescript-eslint/parser": "1.12.0",
    "coveralls": "^3.0.2",
    "eslint": "6.0.1",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-jest": "^22.7.1",
    "eslint-plugin-prettier": "3.1.0",
    "husky": "3.0.0",
    "jest": "24.8.0",
    "lint-staged": "^9.1.0",
    "prettier": "1.18.2",
    "rollup": "1.17.0",
    "rollup-plugin-commonjs": "10.0.1",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-terser": "5.1.1",
    "rollup-plugin-typescript2": "0.22.0",
    "ts-jest": "24.0.2",
    "typescript": "3.5.3",
    "uglifyjs-webpack-plugin": "^2.1.3"
  },
  "jest": {
    "testEnvironment": "node",
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "diagnostics": false
      }
    }
  }
}

{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": false,
    "baseUrl": "./src",
    "outDir": "./lib",
    "strict": true,
    "target": "es2015"
  },
  "include": ["./src/**/*", "src/types/index.ts"],
  "exclude": ["node_modules/**"]
}
